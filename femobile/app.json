{
  "expo": {
    "name": "Home Mate",
    "slug": "homemate_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo-house-service.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "homemate",
    "splash": {
      "image": "./assets/logo-house-service.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thanhthattechnology.homemate",
      "infoPlist": {
        "CFBundleDisplayName": "Home Mate",
        "NSCameraUsageDescription": "Ứng dụng cần quyền truy cập camera để chụp ảnh đại diện."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo-house-service.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.thanhthattechnology.homemate",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/logo-house-service.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Ứng dụng cần truy cập vị trí để hiển thị địa chỉ gần bạn."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0b029ad1-e66e-43d0-b4b1-bb712ba0a29f"
      }
    }
  }
}
