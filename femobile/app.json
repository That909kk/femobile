{
  "expo": {
    "name": "mobile_housekeepingservice",
    "slug": "mobile_housekeepingservice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo-house-service.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "housekeeping",
    "locales": {
      "vi": {
        "CFBundleDisplayName": "Dịch vụ Giúp việc",
        "NSCameraUsageDescription": "Ứng dụng cần quyền truy cập camera để chụp ảnh đại diện."
      },
      "en": {
        "CFBundleDisplayName": "Home Service",
        "NSCameraUsageDescription": "This app needs access to camera to take profile photos."
      }
    },
    "splash": {
      "image": "./assets/logo-house-service.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thanhthattechnology.homeservice"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.thanhthattechnology.homeservice"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Ứng dụng cần truy cập vị trí để hiển thị địa chỉ gần bạn."
        }
      ]
    ]
  }
}
